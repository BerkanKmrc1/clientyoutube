@model List<Product>
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2">
            Product List
        </div>

        <div class="text-right pr-2 my-2">
            <a asp-action="Add" asp-controller="Home" class="btn btn-primary btn-sm">Ekle</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id ="@item.Id" class="btn btn-info">Edit</a>
                        <a onclick = "return confirm('Silmek istediğinizden eminmisiniz')" asp-action="Edit" asp-controller="Home" asp-route-id ="@item.Id" class="btn btn-warning">Delete</a>
                    </td>
                </tr>

            }

        </table>
    </div>
</body>
</html>